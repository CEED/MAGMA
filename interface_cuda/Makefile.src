# push previous directory
dir_stack := $(dir_stack) $(cdir)
cdir      := interface_cuda
# ----------------------------------------------------------------------


# alphabetic order by base name (ignoring precision)
libmagma_src += \
	$(cdir)/alloc.cpp	\
	$(cdir)/blas_z_v1.cpp	\
	$(cdir)/blas_z_v2.cpp	\
	$(cdir)/copy_v1.cpp	\
	$(cdir)/copy_v2.cpp	\
	$(cdir)/error.cpp	\
	$(cdir)/interface.cpp	\


# ----------------------------------------------------------------------
# pop first directory
cdir      := $(firstword $(dir_stack))
dir_stack := $(wordlist 2, $(words $(dir_stack)), $(dir_stack))
