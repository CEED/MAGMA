# make.inc automatically generated by plasma-installer

#prefix      = ./install

MAKE        = make -j 4
CC          = cc
FC          = gfortran
LOADER      = $(FC) 

ARCH        = ar
ARCHFLAGS   = rc
RANLIB      = /usr/bin/ranlib

CFLAGS      = -Wall -O3 -DADD_
FFLAGS      = -Wall -O3  
LDFLAGS     = 

MORSE_USE_MULTICORE=0  # Put 1 if you want to use multi-threaded kernels
MORSE_USE_CUDA=0       # Put 1 if you want to use CUDA kernels

MORSE_USE_QUARK=0
MORSE_USE_STARPU=1

INCPLASMA = `pkg-config --cflags plasma`
LIBPLASMA = `pkg-config --libs plasma`

INCSTARPU = `pkg-config --cflags libstarpu`
LIBSTARPU = `pkg-config --libs libstarpu`

