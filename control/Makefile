DIR = control
MAGMA_DIR = ..
include $(MAGMA_DIR)/Makefile.internal

ZSRC := \
	magma_znan_inf.cpp	\
	zpanel_to_q.cpp	\
	zprint.cpp	\
	magma_zbulge.cpp	\

ifeq ($(PGIFORTRAN), 0)
ZSRC += \
	magma_f77.cpp		\
	magma_param.f90		\
	magma.f90
else
ZSRC += \
	magma_zf77pgi.cpp
endif

# alphabetic order
SRC := \
	affinity.cpp		\
	auxiliary.cpp		\
	magma_bulge.cpp	\
	connection_mgpu.cpp	\
	constants.cpp		\
	get_nb.cpp		\
	magma_threadsetting.cpp	\
	magma_timer.cpp		\
	magmawinthread.cpp	\
	pthread_barrier.cpp	\
	strlcpy.cpp		\
	sqrt.cpp		\
	thread_queue.cpp	\
	trace.cpp		\
	xerbla.cpp		\
	magmaos.cpp		\

# ilaenv was previously used by gesdd; it was the only required Fortran dependence
#	ilaenv_f77.f		\
#	ilaenv.cpp		\

# Fortran wrappers are generated by 'make wrappers'
# They don't directly use precision generation;
# the headers that they are generated from use precision generation.
SRC += \
	magma_sf77.cpp		\
	magma_df77.cpp		\
	magma_cf77.cpp		\
	magma_zf77.cpp		\
	magma_sfortran.F90	\
	magma_dfortran.F90	\
	magma_cfortran.F90	\
	magma_zfortran.F90	\


# ------------------------------------------------------------
-include Makefile.local
-include Makefile.src

ALLSRC := $(ZSRC) $(CSRC) $(DSRC) $(SSRC) $(SRC)

ALLOBJ := $(ALLSRC:.cpp=.$(o_ext))
ALLOBJ := $(filter %.$(o_ext), $(ALLOBJ))

FOBJ   := $(ALLSRC:.f90=.$(o_ext))
FOBJ   := $(FOBJ:.F90=.$(o_ext))
FOBJ   := $(FOBJ:.f=.$(o_ext))
FOBJ   := $(filter %.$(o_ext), $(FOBJ))

ifneq ($(FORT),no_fortran)
    ALLOBJ += $(FOBJ)
endif

.PHONY: all clean cleanall

.DEFAULT_GOAL := all
all: $(LIBMAGMA)

$(LIBMAGMA): $(ALLOBJ) stamp
	$(ARCH) $(ARCHFLAGS) $@ $(ALLOBJ)
	$(RANLIB) $@
	-cp *.mod ../include

# this forces LIBMAGMA to be archived
stamp: $(ALLOBJ)
	touch $@

clean:
	rm -f *.$(o_ext) *~ *.linkinfo *.mod ../include/*.mod sizeptr stamp

cleanall: clean
	rm -f $(LIBMAGMA)

wrappers: ../include/magma_s.i ../include/magma_d.i ../include/magma_c.i ../include/magma_z.i
	../tools/fortran_wrappers.pl ../include/magma_s.i
	../tools/fortran_wrappers.pl ../include/magma_d.i
	../tools/fortran_wrappers.pl ../include/magma_c.i
	../tools/fortran_wrappers.pl ../include/magma_z.i
	rm $^

# Extra dependencies for .mod files
magma.$(o_ext): magma_zfortran.$(o_ext) magma_cfortran.$(o_ext) magma_dfortran.$(o_ext) magma_sfortran.$(o_ext) 
magma_zfortran.$(o_ext): magma_param.$(o_ext)
magma_cfortran.$(o_ext): magma_param.$(o_ext)
magma_dfortran.$(o_ext): magma_param.$(o_ext)
magma_sfortran.$(o_ext): magma_param.$(o_ext)
