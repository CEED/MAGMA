#
# These two files are provided by cuda
# CUDA 5 needs -DCUBLAS_GFORTRAN or appropriate setting to compile cuda/src/fortran.c bindings
#
$(cdir)/fortran.$(o_ext) : CFLAGS += -DCUBLAS_GFORTRAN
$(cdir)/fortran.$(o_ext) : $(CUDADIR)/src/fortran.c
	$(CC) $(CFLAGS) $(INC) -c $< -o $@

$(cdir)/fortran_thunking.$(o_ext) : $(CUDADIR)/src/fortran_thunking.c
	$(CC) $(CFLAGS) $(INC) -c $< -o $@


